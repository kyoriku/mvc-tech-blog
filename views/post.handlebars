<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 offset-md-1">

      <!-- Displaying the post title, contents, post creator’s username, and date created-->
      <h1 class="text-light">{{title}}</h1>
      <div class="card post-card">
        <p class="card-text">{{content}}</p>
        <p class="card-text text-muted-custom">Posted by {{user.username}} on {{formatDateTime createdAt}}</p>
      </div>

      <!-- Comment Form -->
      {{#if logged_in}}
      <form id="comment-form" class="mt-4">
        <div class="mb-3">
          <label for="comment" class="form-label text-light">Leave a Comment:</label>
          <textarea class="form-control bg-light" id="comment" name="comment" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </form>
      {{else}}

      <!-- Displayed when the user is not logged in -->
      <p class="text-light mt-4">Please <a href="/login" class="text-primary">log in</a> to leave a comment.</p>
      {{/if}}

      <!-- Displaying the comments, the comment creator’s username, and the date created -->
      {{#if comments}}
      <h2 class="mt-4 text-light">Comments</h2>
      <ul class="list-unstyled" id="comments-list">
        {{#each comments}}
        <li class="card comment-card mt-3">
          <p class="card-text">{{comment_text}}</p>
          <p class="card-text text-muted-custom">By {{user.username}} on {{formatDateTime this.createdAt}}</p>
        </li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>