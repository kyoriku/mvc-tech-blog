<div class="container mt-4 col-md-10">
  <div class="row align-items-center">
    <div class="col-sm-8">
      <h1 class="text-light">Dashboard</h1>
    </div>

    <!-- Add new post button -->
    <div class="col-sm-4 d-flex justify-content-center">
      <a href="/dashboard/new-post" class="btn btn-success mb-4 custom-btn">Add New Post</a>
    </div>
  </div>

  <!-- Posts -->
  {{#each posts}}
  <div class="card mb-3 dashboard-card">
    <div class="card-body">
      <h2 class="card-title"><a href="/post/{{id}}" class="text-decoration-none">{{title}}</a></h2>
      <p class="card-text">{{content}}</p>

      <!-- Edit post button -->
      <a href="/dashboard/edit/{{id}}" class="btn btn-primary me-2">Edit</a>

      <!-- Delete post button -->
      <button type="button" class="btn btn-danger delete-post-button" data-post-id="{{id}}">Delete</button>
    </div>
  </div>
  {{/each}}
</div>
<script src="/js/delete-post.js"></script>