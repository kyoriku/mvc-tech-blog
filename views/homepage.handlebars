{{#if posts.length}}
<h1 class="text-center">Latest Blog Posts</h1>
<div class="row">
  {{#each posts}}
  <div class="col-md-4 mb-4">
    <a href="/post/{{id}}" class="card-link">
      <div class="card">
        <div class="card-body custom-card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text text-muted">Created on: {{formatDate createdAt}}</p>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
</div>
{{else}}
<p>No posts available.</p>
{{/if}}